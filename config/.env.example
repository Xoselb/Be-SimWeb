# Configuración de la aplicación
NODE_ENV=production
PORT=3000
JWT_SECRET=tu_super_secreto_jwt_aqui

# [PRODUCCIÓN] Configuración de la base de datos para la empresa
# =======================================================
# Configuración del servidor de base de datos
DB_HOST=localhost              # [CAMBIAR] IP o hostname del servidor de la empresa
DB_USER=                       # [CAMBIAR] Usuario con permisos en la base de datos
DB_PASSWORD=                   # [CAMBIAR] Contraseña del usuario
DB_NAME=Eb_SimWeb              # Nombre de la base de datos en producción

# Configuración de CORS (orígenes permitidos)
# Formato: https://dominio1.com,https://subdominio.dominio2.com
ALLOWED_ORIGINS=               # [CAMBIAR] Dominios permitidos para CORS

# Configuración de cookies
COOKIE_DOMAIN=                 # [CAMBIAR] Dominio para las cookies (ej: .tudominio.com)

# Configuración de seguridad
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX=100  # 100 peticiones por ventana

# Configuración de correo (si es necesario)
# SMTP_HOST=smtp.tuservidor.com
# SMTP_PORT=587
# SMTP_USER=tu_usuario
# SMTP_PASS=tu_contraseña
# EMAIL_FROM=noreply@tudominio.com
