    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Función para formatear el tiempo restante
            function formatTimeRemaining(timeDiff) {
                const days = Math.floor(timeDiff / (1000 * 60 * 60 * 24));
                const hours = Math.floor((timeDiff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((timeDiff % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((timeDiff % (1000 * 60)) / 1000);
                
                if (days > 0) {
                    return `COMMENCE DANS ${days}J ${hours}H`;
                } else if (hours > 0) {
                    return `COMMENCE DANS ${hours}H ${minutes}M`;
                } else if (minutes > 0) {
                    return `COMMENCE DANS ${minutes}M ${seconds}S`;
                } else {
                    return `COMMENCE DANS ${seconds}S`;
                }
            }

            // Función para actualizar los contadores
            function updateCountdowns() {
                const now = new Date();
                const eventCards = document.querySelectorAll('.event-card');
                
                eventCards.forEach(card => {
                    const startDate = new Date(card.getAttribute('data-start-date'));
                    const timeDiff = startDate - now;
                    const timerElement = card.querySelector('.countdown-timer');
                    
                    // Mostrar siempre el contador, incluso si el evento ya pasó
                    timerElement.style.display = 'block';
                    
                    // Si el evento ya pasó
                    if (timeDiff <= 0) {
                        timerElement.textContent = 'TERMINÉ';
                        timerElement.style.background = 'rgba(0, 0, 0, 0.9)';
                        timerElement.classList.add('active');
                        return;
                    }
                    
                    // Mostrar cuenta regresiva para eventos futuros
                    timerElement.textContent = formatTimeRemaining(timeDiff);
                    timerElement.classList.add('active');
                    
                    // Resaltar según la proximidad del evento
                    const hoursDiff = timeDiff / (1000 * 60 * 60);
                    if (hoursDiff < 24) {
                        // Rojo para menos de 24 horas
                        timerElement.style.background = 'rgba(231, 76, 60, 0.9)';
                        timerElement.style.fontWeight = '700';
                    } else if (hoursDiff < 48) {
                        // Naranja para menos de 48 horas
                        timerElement.style.background = 'rgba(230, 126, 34, 0.9)';
                        timerElement.style.fontWeight = '600';
                    } else {
                        // Negro para más de 48 horas
                        timerElement.style.background = 'rgba(0, 0, 0, 0.9)';
                        timerElement.style.fontWeight = '500';
                    }
                });
            }
            
            // Función para crear una tarjeta de carrera terminada
            function createPastEventCard(eventElement) {
                const eventData = {
                    id: eventElement.dataset.eventId || 'event-' + Date.now(),
                    title: eventElement.dataset.title || 'Carrera sin título',
                    date: eventElement.querySelector('.event-date').textContent,
                    image: eventElement.dataset.image || '',
                    podium: eventElement.dataset.podium ? JSON.parse(eventElement.dataset.podium) : null
                };

                const pastEventCard = document.createElement('div');
                pastEventCard.className = 'past-event-card';
                pastEventCard.dataset.eventId = eventData.id;
                
                let podiumHTML = '';
                if (eventData.podium) {
                    podiumHTML = `
                        <div class="podium">
                            ${[1, 2, 3].map(pos => `
                                <div class="podium-step">
                                    <div class="podium-place">${pos}</div>
                                    <div class="podium-driver">${eventData.podium[pos]?.name || 'N/A'}</div>
                                    <div class="podium-time">${eventData.podium[pos]?.time || ''}</div>
                                </div>
                            `).join('')}
                        </div>`;
                }

                pastEventCard.innerHTML = `
                    <div class="past-event-image" style="background-image: url('${eventData.image}');">
                        <span class="past-event-date">${eventData.date}</span>
                    </div>
                    <div class="past-event-content">
                        <h3 class="past-event-title">${eventData.title}</h3>
                        ${podiumHTML}
                        <a href="#" class="btn-competition btn-outline">Ver Clasificación Completa</a>
                    </div>
                
                // Mostrar cuenta regresiva para eventos futuros
                timerElement.textContent = formatTimeRemaining(timeDiff);
                timerElement.classList.add('active');
                
                // Resaltar según la proximidad del evento
                const hoursDiff = timeDiff / (1000 * 60 * 60);
                if (hoursDiff < 24) {
                    // Rojo para menos de 24 horas
                    timerElement.style.background = 'rgba(231, 76, 60, 0.9)';
                    timerElement.style.fontWeight = '700';
                } else if (hoursDiff < 48) {
                    // Naranja para menos de 48 horas
                    timerElement.style.background = 'rgba(230, 126, 34, 0.9)';
                    timerElement.style.fontWeight = '600';
                } else {
                    // Negro para más de 48 horas
                    timerElement.style.background = 'rgba(0, 0, 0, 0.9)';
                    timerElement.style.fontWeight = '500';
                }
            });
        }
        
        // Función para crear una tarjeta de carrera terminada
        function createPastEventCard(eventElement) {
            const eventData = {
                id: eventElement.dataset.eventId || 'event-' + Date.now(),
                title: eventElement.dataset.title || 'Carrera sin título',
                date: eventElement.querySelector('.event-date').textContent,
                image: eventElement.dataset.image || '',
                podium: eventElement.dataset.podium ? JSON.parse(eventElement.dataset.podium) : null
            };

            const pastEventCard = document.createElement('div');
            pastEventCard.className = 'past-event-card';
            pastEventCard.dataset.eventId = eventData.id;
            
            let podiumHTML = '';
            if (eventData.podium) {
                podiumHTML = `
                    <div class="podium">
                        ${[1, 2, 3].map(pos => `
                            <div class="podium-step">
                                <div class="podium-place">${pos}</div>
                                <div class="podium-driver">${eventData.podium[pos]?.name || 'N/A'}</div>
                                <div class="podium-time">${eventData.podium[pos]?.time || ''}</div>
                            </div>
                        `).join('')}
                    </div>`;
            }

            pastEventCard.innerHTML = `
                <div class="past-event-image" style="background-image: url('${eventData.image}');">
                    <span class="past-event-date">${eventData.date}</span>
                </div>
                <div class="past-event-content">
                    <h3 class="past-event-title">${eventData.title}</h3>
                    ${podiumHTML}
                    <a href="#" class="btn-competition btn-outline">Ver Clasificación Completa</a>
                </div>
            `;

            return pastEventCard;
        }

        // Función para actualizar la visibilidad de las carreras terminadas
        function updatePastEventsVisibility() {
            const pastEvents = document.querySelectorAll('.past-event-card');
            const showMoreBtn = document.getElementById('show-more-events');
            const maxVisible = 3;
            let visibleCount = 0;
            
            pastEvents.forEach((event, index) => {
                if (index < maxVisible) {
                    event.style.display = 'block';
                    visibleCount++;
                } else {
                    event.style.display = 'none';
                }
            });
            
            // Mostrar/ocultar el botón de ver más
            if (pastEvents.length > maxVisible) {
                if (!showMoreBtn) {
                    const btn = document.createElement('button');
                    btn.id = 'show-more-events';
                    btn.className = 'btn-competition';
                    btn.textContent = 'Ver más carreras';
                    btn.addEventListener('click', function() {
                        const hiddenEvents = document.querySelectorAll('.past-event-card[style*="display: none"]');
                        hiddenEvents.forEach(event => {
                            event.style.display = 'block';
                        });
                        this.remove();
                    });
                    document.querySelector('.past-events .container').appendChild(btn);
                }
            } else if (showMoreBtn) {
                showMoreBtn.remove();
            }
        }
        
        // Función para actualizar el estado de las carreras
        function updateRaceStatus() {
            const now = new Date();
            const eventCards = document.querySelectorAll('.event-card');
            const pastEventsContainer = document.querySelector('.past-events .events-grid');
            
            eventCards.forEach(card => {
                const endDate = card.dataset.endDate ? new Date(card.dataset.endDate) : null;
                const statusElement = card.querySelector('.event-status');
                
                if (endDate && now > endDate && !card.dataset.processed) {
                    // Marcar como terminada
                    card.dataset.processed = 'true';
                    if (statusElement) {
                        statusElement.textContent = 'Terminé';
                        statusElement.className = 'event-status status-completed';
                    }
                    
                    // Mover a la sección de carreras terminadas
                    const pastEventCard = createPastEventCard(card);
                    pastEventsContainer.prepend(pastEventCard);
                    
                    // Ocultar la tarjeta original con animación
                    card.style.transition = 'opacity 0.5s, transform 0.5s';
                    card.style.opacity = '0';
                    card.style.transform = 'translateY(20px)';
                    
                    // Eliminar después de la animación
                    setTimeout(() => {
                        card.remove();
                        updatePastEventsVisibility();
                    }, 500);
                }
            });
            
            // Actualizar visibilidad de carreras terminadas
            updatePastEventsVisibility();
        }
        
        // Inicializar contadores y estado de carreras
        updateCountdowns();
        updateRaceStatus();
        
        // Actualizar los contadores y estado cada segundo
        setInterval(() => {
            updateCountdowns();
            updateRaceStatus();
        }, 1000);
    });
</script>
