# .env.example - Variables de entorno
# Copiar este archivo a .env y configurar los valores

# Configuración del servidor
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Base de Datos
DB_TYPE=mongodb
# Opciones: mongodb, postgresql, mysql

# MongoDB
MONGODB_URI=mongodb://localhost:27017/eb_racing

# PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eb_racing
DB_USER=postgres
DB_PASSWORD=password

# MySQL
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=eb_racing
# DB_USER=root
# DB_PASSWORD=password

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Email (opcional, para verificación de email)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Archivos (para upload de avatares)
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880  # 5MB

# Seguridad
BCRYPT_ROUNDS=10
SESSION_TIMEOUT=86400000  # 24 horas en milisegundos
